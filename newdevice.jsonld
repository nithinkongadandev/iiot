{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Mydevice": {
      "type": "object",
      "properties": {
        "MyDeviceDoc": {
          "type": "object",
          "properties": {
            "_copyright": {
              "type": "string"
            },
            "_releaseDate": {
              "type": "string"
            },
            "_version": {
              "type": "string"
            }
          },
          "required": [
            "_copyright",
            "_releaseDate",
            "_version"
          ]
        },
        "MyDeviceDetails": {
          "type": "object",
          "properties": {
            "MyProfileIdentification": {
              "type": "string"
            },
            "MyProfileRevision": {
              "type": "string"
            }
          },
          "required": [
            "MyProfileIdentification",
            "MyProfileRevision"
          ]
        }
      },
      "required": [
        "MyDeviceDoc",
        "MyDeviceDetails"
      ]
    }
  },
  "required": [
    "Mydevice"
  ]
}
